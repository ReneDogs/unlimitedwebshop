<%= form_for(@article) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
 <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price   %>
  </div> 
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :size => "12x4" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>