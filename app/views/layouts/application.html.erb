<!DOCTYPE html>
<html>
  <head>
    
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
        <Table>
        <tr>
        <td><div><h1><%= title %></h1></div></td>
        <td align="right"><%= link_to logo,cart_path %></td>    
        </tr>
        </Table>

        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </section>
      
      <%= render 'layouts/footer' %>
      
    </div>
  </body>
</html>